{
  "name": "name",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "watch": {
    "dev:frontend:exe": {
      "patterns": [
        "./frontend",
        "./shared"
      ],
      "extensions": [
        "hs",
        "cabal"
      ]
    },
    "dev:backend:exe": {
      "patterns": [
        "./backend",
        "./shared"
      ],
      "extensions": [
        "hs",
        "cabal"
      ]
    }
  },
  "scripts": {
    "dev:frontend": "npm run serve:frontend & { npm-watch dev:frontend:exe && killall -9 lite-server; }",
    "dev:backend": "./run-ghc exe:backend backend & { npm-watch dev:backend:exe; }",
    "serve:frontend": "(cd dist/site/exe:frontend/ && lite-server) &",
    "dev:backend:exe": "./build-ghc exe:backend backend && { killall -9 backend || true; } && echo 'Starting backend' && ./run-ghc exe:backend backend",
    "dev:frontend:exe": "./build-ghcjs exe:frontend"
  },
  "author": "$author",
  "email": "$email",
  "license": "BSD2",
  "dependencies": {
    "npm-watch": "0.2.0",
    "lite-server": "2.3.0"
  }
}
